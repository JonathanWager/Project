<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.project.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/movieSearchActivity"
        android:name="com.example.project.MovieSearchActivity"
        android:label="activity_movie_search"
        tools:layout="@layout/activity_movie_search" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.project.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <activity
        android:id="@+id/movieDetailsActivity"
        android:name="com.example.project.MovieDetailsActivity"
        android:label="activity_movie_details"
        tools:layout="@layout/activity_movie_details" />
    <fragment
        android:id="@+id/movieSearchFragment"
        android:name="com.example.project.MovieSearchFragment"
        android:label="fragment_movie_search"
        tools:layout="@layout/activity_movie_search" >
        <action
            android:id="@+id/action_movieSearchFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.project.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/activity_movie_details" />
</navigation>